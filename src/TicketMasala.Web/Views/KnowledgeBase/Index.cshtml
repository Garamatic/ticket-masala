@model IEnumerable<TicketMasala.Web.Models.KnowledgeBaseArticle>
@using TicketMasala.Web.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Knowledge Base"];
}

<div class="page-header">
    <div class="d-flex align-items-center gap-3">
        <h2 class="page-title"><i class="fas fa-book me-2 text-primary"></i>@Localizer["Knowledge Base"]</h2>
        <span class="badge bg-light text-dark">@Model.Count() @Localizer["Articles"]</span>
    </div>
    
    <div class="page-actions">
        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> @Localizer["Create"]
            </a>
        }
    </div>
</div>

<div class="filters-bar">
    <form asp-action="Index" method="get" class="d-flex flex-grow-1 gap-2">
        <div class="search-box flex-grow-1">
            <i class="fas fa-search search-icon"></i>
            <input type="text" name="searchTerm" class="form-control" placeholder="@Localizer["Search articles by title, content or tags..."]" value="@ViewData["SearchTerm"]">
        </div>
        <button class="btn btn-outline-primary" type="submit">@Localizer["Search"]</button>
        @if (ViewData["SearchTerm"] != null)
        {
             <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Clear"]</a>
        }
    </form>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-search"></i>
        </div>
        <h3 class="empty-state-title">@Localizer["No articles found"]</h3>
        <p class="empty-state-text">@Localizer["Try adjusting your search terms or create a new article."]</p>
        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> @Localizer["Write Article"]
            </a>
        }
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 project-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-primary">@item.Title</a>
                        </h5>
                        
                        <div class="d-flex align-items-center text-muted mb-3" style="font-size: 0.85rem;">
                            <i class="fas fa-user-circle me-1"></i>
                            <span class="me-3">@(item.Author?.UserName ?? "Unknown")</span>
                            <i class="fas fa-calendar-alt me-1"></i>
                            <span>@item.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>

                        <p class="card-text text-secondary flex-grow-1">
                            @if(item.Content.Length > 100)
                            {
                                @(item.Content.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @item.Content
                            }
                        </p>
                        
                        <div class="mt-3">
                            @if (!string.IsNullOrEmpty(item.Tags))
                            {
                                foreach (var tag in item.Tags.Split(','))
                                {
                                    <span class="badge badge-info me-1">@tag.Trim()</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 pt-0 d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@Localizer["Read"]</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
