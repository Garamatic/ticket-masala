@page
@model LoginModel
@using Microsoft.Extensions.Localization
@using TicketMasala.Web
@using TicketMasala.Web.Resources
@inject IStringLocalizer<SharedResource> Localizer

@inject IWebHostEnvironment env

@{
    ViewData["Title"] = Localizer["Sign In"];
    Layout = null; // Use custom full-page layout for login
    var themePath = env.WebRootPath != null ? System.IO.Path.Combine(env.WebRootPath, "tenant-theme", "style.css") : null;
    
    var logoFileSystemPath = env.WebRootPath != null ? System.IO.Path.Combine(env.WebRootPath, "tenant-theme", "logo.png") : null;
    var logoUrl = (logoFileSystemPath != null && System.IO.File.Exists(logoFileSystemPath)) ? "~/tenant-theme/logo.png" : "~/images/logo.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@Localizer["Sign in to Ticket Masala - Project and Ticket Management System"]" />
    <title>@ViewData["Title"] - Ticket Masala</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Rajdhani:wght@500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bundled CSS -->
    <link rel="stylesheet" href="~/css/bundle.css" asp-append-version="true" />
    
    <!-- Tenant Theme -->
    <link rel="stylesheet" href="~/tenant-theme/style.css" asp-append-version="true" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-family-base, 'Inter', -apple-system, BlinkMacSystemFont, sans-serif);
            min-height: 100vh;
            background: var(--color-background, #f8fafc);
        }

        .login-container {
            display: flex;
            min-height: 100vh;
        }

        /* Left Panel - Branding */
        .login-branding {
            flex: 1;
            background: var(--login-branding-bg, linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%));
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            position: relative;
            overflow: hidden;
        }

        .login-branding::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
            animation: pulse 15s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }

        .branding-content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: var(--login-branding-text, white);
        }

        .branding-logo {
            width: 120px;
            height: auto;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.2));
        }

        .branding-title {
            font-family: var(--font-family-branding, 'Rajdhani', sans-serif);
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
            color: var(--login-branding-text, #ffffff) !important;
        }

        .branding-tagline {
            font-size: 1.25rem;
            opacity: 0.9;
            max-width: 300px;
            line-height: 1.6;
            color: var(--login-branding-text, #ffffff) !important;
        }

        .branding-features {
            margin-top: 3rem;
            text-align: left;
            color: var(--login-branding-text, #ffffff) !important;
        }

        .branding-feature {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
            font-size: 1rem;
            opacity: 0.9;
        }

        .branding-feature i {
            width: 24px;
            text-align: center;
        }

        /* Right Panel - Form */
        .login-form-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            background: var(--color-surface, white);
        }

        .login-card {
            width: 100%;
            max-width: 400px;
        }

        .login-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .login-header h1 {
            font-family: 'Rajdhani', sans-serif;
            font-size: 2rem;
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 0.5rem;
        }

        .login-header p {
            color: #64748b;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-floating .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1rem 0.5rem;
            height: auto;
            font-size: 1rem;
            transition: all 0.2s ease;
        }

        .form-floating .form-control:focus {
            border-color: var(--color-primary, #4CAF50);
            box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.1);
        }

        .form-floating label {
            padding: 1rem;
            color: #64748b;
        }

        .form-check {
            margin-bottom: 1.5rem;
        }

        .form-check-input:checked {
            background-color: var(--color-primary, #4CAF50);
            border-color: var(--color-primary, #4CAF50);
        }

        .btn-login {
            width: 100%;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--border-radius, 12px);
            background: var(--login-btn-bg, linear-gradient(135deg, #4CAF50 0%, #388E3C 100%));
            border: none;
            color: var(--login-btn-text, white);
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            background: linear-gradient(135deg, #43A047 0%, #2E7D32 100%);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .login-links {
            margin-top: 1.5rem;
            text-align: center;
        }

        .login-links a {
            color: #2E7D32;
            text-decoration: none;
            font-size: 0.9rem;
            display: block;
            margin-bottom: 0.5rem;
            transition: color 0.2s ease;
        }

        .login-links a:hover {
            color: #1B5E20;
            text-decoration: underline;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
            color: #94a3b8;
            font-size: 0.85rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .divider span {
            padding: 0 1rem;
        }

        .external-login-section {
            text-align: center;
        }

        .external-login-section h3 {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .btn-external {
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            border: 2px solid #e2e8f0;
            background: white;
            color: #1a1a2e;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-external:hover {
            border-color: var(--color-primary, #4CAF50);
            background: rgba(76, 175, 80, 0.05);
        }

        .text-danger {
            color: #ef4444 !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .validation-summary-errors {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            color: #b91c1c;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .login-branding {
                display: none;
            }
            
            .login-form-panel {
                padding: 2rem;
            }

            .login-card {
                max-width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .login-form-panel {
                padding: 1.5rem;
            }
        }

        /* Mobile logo for small screens */
        .mobile-logo {
            display: none;
            text-align: center;
            margin-bottom: 2rem;
        }

        .mobile-logo img {
            max-width: 80px;
            height: auto;
        }

        @@media (max-width: 992px) {
            .mobile-logo {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Branding Panel -->
        <div class="login-branding">
            <div class="branding-content">
                <img src="@logoUrl" alt="Ticket Masala" class="branding-logo" />
                <h1 class="branding-title">Ticket Masala</h1>
                <p class="branding-tagline">@Localizer["Spice up your project management with intelligent ticket handling"]</p>
                
                <div class="branding-features">
                    <div class="branding-feature">
                        <i class="fas fa-robot"></i>
                        <span>@Localizer["AI-Powered Ticket Dispatch"]</span>
                    </div>
                    <div class="branding-feature">
                        <i class="fas fa-chart-line"></i>
                        <span>@Localizer["Real-time Analytics Dashboard"]</span>
                    </div>
                    <div class="branding-feature">
                        <i class="fas fa-users-cog"></i>
                        <span>@Localizer["Smart Team Management"]</span>
                    </div>
                    <div class="branding-feature">
                        <i class="fas fa-envelope"></i>
                        <span>@Localizer["Email-to-Ticket Automation"]</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Form Panel -->
        <div class="login-form-panel">
            <div class="login-card">
                <!-- Mobile Logo -->
                <div class="mobile-logo">
                    <img src="@logoUrl" alt="Ticket Masala" />
                </div>

                <div class="login-header">
                    <h1>@Localizer["Welcome Back"]</h1>
                    <p>@Localizer["Sign in to your account to continue"]</p>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email"><i class="fas fa-envelope me-2"></i>@Localizer["Email"]</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password"><i class="fas fa-lock me-2"></i>@Localizer["Password"]</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Localizer["Remember me"]
                        </label>
                    </div>
                    
                    <button id="login-submit" type="submit" class="btn btn-login">
                        <i class="fas fa-sign-in-alt me-2"></i>@Localizer["Sign In"]
                    </button>
                </form>

                <div class="login-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">
                        <i class="fas fa-key me-1"></i>@Localizer["Forgot your password?"]
                    </a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        <i class="fas fa-user-plus me-1"></i>@Localizer["Register as a new user"]
                    </a>
                </div>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="divider">
                        <span>@Localizer["or continue with"]</span>
                    </div>
                    
                    <div class="external-login-section">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-external" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
