                                                        <button type="submit" class="dropdown-item text-danger">                                                <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                            }
                            </div>
                        </div>
                }
            </header>

            <!-- Page Content -->
            <main class="app-content page-enter" role="main">
                <div class="container">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="border-top footer text-muted p-3 bg-white">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>&copy; @DateTime.Now.Year Ticket Masala - @Localizer["All rights reserved"]</span>
                        <span>
                            <a asp-controller="Home" asp-action="Privacy" class="text-muted">@Localizer["Privacy Policy"]</a>
                        </span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bundled Scripts (jQuery + Bootstrap + Site.js + Toast.js) -->
    <script src="~/js/bundle.js" asp-append-version="true"></script>
