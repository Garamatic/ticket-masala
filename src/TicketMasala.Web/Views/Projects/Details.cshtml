@model TicketMasala.Web.ViewModels.Projects.ProjectTicketViewModel
@using System.Linq
@using TicketMasala.Web.Models
@using TicketMasala.Web.ViewModels

@{
    ViewData["Title"] = "Project Detail: " + Model.ProjectDetails.Name;
}

<h1>Project Details</h1>

<div class="detail-container">
    <h4>@Model.ProjectDetails.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.ProjectDetails.Description</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            <status-badge status="@Model.ProjectDetails.Status"></status-badge>
        </dd>

        <dt class="col-sm-3">Project Manager</dt>
        <dd class="col-sm-9">@Model.ProjectDetails.ProjectManagerName</dd>

        <dt class="col-sm-3">Completion Target</dt>
        <dd class="col-sm-9">@(Model.ProjectDetails.CompletionTarget?.ToLocalTime().ToString("g") ?? "N/A")</dd>
    </dl>
</div>

<h3>Tickets (@Model.Tasks.Count)</h3>

@if (Model.Tasks != null && Model.Tasks.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Ticket ID</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tasks)
                {
                    <tr>
                        <td>
                            <i class="fas fa-ticket-alt text-muted me-2"></i> @ticket.Guid.ToString().Substring(0, 8)...
                        </td>
                        <td>
                            <status-badge status="@ticket.TicketStatus"></status-badge>
                        </td>
                        <td>
                            <a asp-controller="Ticket" asp-action="Detail" asp-route-id="@ticket.Guid" class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No Tickets for this Project</p>
}

<div class="mt-4 d-flex gap-2">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Return to Overview
    </a>
    @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
    {
        <a asp-controller="Ticket" asp-action="Create" asp-route-projectGuid="@Model.ProjectDetails.Guid" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Add Ticket
        </a>
        <a asp-action="Edit" asp-route-id="@Model.ProjectDetails.Guid" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i>Edit Project
        </a>
    }
    @if (User.IsInRole("Admin"))
    {
        <form asp-action="Delete" asp-route-id="@Model.ProjectDetails.Guid" method="post" 
              onsubmit="return confirm('Are you sure you want to delete this project? This action cannot be undone.');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>Delete Project
            </button>
        </form>
    }
</div>
