@using IT_Project2526.Models.Configuration
@model IEnumerable<CustomFieldDefinition>

@{
    var existingValues = ViewBag.CustomFieldValues as Dictionary<string, object?> ?? new Dictionary<string, object?>();
    var workItemTypeCode = ViewBag.WorkItemTypeCode as string;
}

@if (Model != null && Model.Any())
{
    <div class="custom-fields-section">
        <h5 class="mb-3">
            <i class="fas fa-sliders-h me-2 text-secondary"></i>
            Additional Information
        </h5>
        
        <div class="row">
            @foreach (var field in Model)
            {
                var isRequired = field.Required || 
                    (workItemTypeCode != null && field.RequiredForTypes.Contains(workItemTypeCode, StringComparer.OrdinalIgnoreCase));
                var existingValue = existingValues.TryGetValue(field.Name, out var val) ? val : null;
                var fieldId = $"custom_{field.Name}";
                var fieldName = $"customFields[{field.Name}]";
                
                <div class="col-md-6 mb-3">
                    <label for="@fieldId" class="form-label">
                        @field.Label
                        @if (isRequired)
                        {
                            <span class="text-danger">*</span>
                        }
                    </label>
                    
                    @switch (field.Type.ToLowerInvariant())
                    {
                        case "text":
                            <input type="text" 
                                   class="form-control" 
                                   id="@fieldId" 
                                   name="@fieldName"
                                   value="@existingValue"
                                   @(isRequired ? "required" : "") />
                            break;
                            
                        case "number":
                            <input type="number" 
                                   class="form-control" 
                                   id="@fieldId" 
                                   name="@fieldName"
                                   value="@existingValue"
                                   @(field.Min.HasValue ? $"min=\"{field.Min}\"" : "")
                                   @(field.Max.HasValue ? $"max=\"{field.Max}\"" : "")
                                   @(isRequired ? "required" : "") />
                            break;
                            
                        case "currency":
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" 
                                       class="form-control" 
                                       id="@fieldId" 
                                       name="@fieldName"
                                       value="@existingValue"
                                       step="0.01"
                                       @(field.Min.HasValue ? $"min=\"{field.Min}\"" : "")
                                       @(field.Max.HasValue ? $"max=\"{field.Max}\"" : "")
                                       @(isRequired ? "required" : "") />
                            </div>
                            break;
                            
                        case "select":
                            <select class="form-select" id="@fieldId" name="@fieldName" @(isRequired ? "required" : "")>
                                <option value="">-- Select --</option>
                                @foreach (var option in field.Options)
                                {
                                    var isSelected = existingValue?.ToString()?.Equals(option, StringComparison.OrdinalIgnoreCase) == true;
                                    if (isSelected)
                                    {
                                        <option value="@option" selected>@option</option>
                                    }
                                    else
                                    {
                                        <option value="@option">@option</option>
                                    }
                                }
                            </select>
                            break;
                            
                        case "multi_select":
                            <select class="form-select" id="@fieldId" name="@fieldName" multiple @(isRequired ? "required" : "")>
                                @{
                                    var selectedValues = existingValue as IEnumerable<object> ?? Enumerable.Empty<object>();
                                }
                                @foreach (var option in field.Options)
                                {
                                    var isSelected = selectedValues.Any(v => v?.ToString()?.Equals(option, StringComparison.OrdinalIgnoreCase) == true);
                                    if (isSelected)
                                    {
                                        <option value="@option" selected>@option</option>
                                    }
                                    else
                                    {
                                        <option value="@option">@option</option>
                                    }
                                }
                            </select>
                            break;
                            
                        case "date":
                            var dateValue = existingValue?.ToString();
                            if (DateTime.TryParse(dateValue, out var dt))
                            {
                                dateValue = dt.ToString("yyyy-MM-dd");
                            }
                            <input type="date" 
                                   class="form-control" 
                                   id="@fieldId" 
                                   name="@fieldName"
                                   value="@dateValue"
                                   @(isRequired ? "required" : "") />
                            break;
                            
                        case "boolean":
                            var isChecked = existingValue?.ToString()?.Equals("true", StringComparison.OrdinalIgnoreCase) == true;
                            <div class="form-check">
                                <input type="checkbox" 
                                       class="form-check-input" 
                                       id="@fieldId" 
                                       name="@fieldName"
                                       value="true"
                                       @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="@fieldId">Yes</label>
                            </div>
                            break;
                            
                        default:
                            <input type="text" 
                                   class="form-control" 
                                   id="@fieldId" 
                                   name="@fieldName"
                                   value="@existingValue"
                                   @(isRequired ? "required" : "") />
                            break;
                    }
                </div>
            }
        </div>
    </div>
}
