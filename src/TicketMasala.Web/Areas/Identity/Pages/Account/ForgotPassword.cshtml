@page
@model ForgotPasswordModel
@using Microsoft.Extensions.Localization
@using TicketMasala.Web
@using TicketMasala.Web.Resources
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Forgot your password?"];
    Layout = null; // Use custom full-page layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@Localizer["Reset your Ticket Masala password"]" />
    <title>@ViewData["Title"] - Ticket Masala</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Rajdhani:wght@500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bundled CSS -->
    <link rel="stylesheet" href="~/css/bundle.css" asp-append-version="true" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
            background: var(--color-background, #f8fafc);
        }

        .forgot-container {
            display: flex;
            min-height: 100vh;
        }

        /* Left Panel - Branding */
        .forgot-branding {
            flex: 1;
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            position: relative;
            overflow: hidden;
        }

        .forgot-branding::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
            animation: pulse 15s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }

        .branding-content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: white;
        }

        .branding-logo {
            width: 120px;
            height: auto;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.2));
        }

        .branding-title {
            font-family: 'Rajdhani', sans-serif;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
            color: #ffffff !important;
        }

        .branding-tagline {
            font-size: 1.25rem;
            opacity: 0.9;
            max-width: 300px;
            line-height: 1.6;
            color: #ffffff !important;
        }

        .branding-icon {
            font-size: 4rem;
            margin-top: 2rem;
            opacity: 0.8;
        }

        /* Right Panel - Form */
        .forgot-form-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            background: white;
        }

        .forgot-card {
            width: 100%;
            max-width: 400px;
        }

        .forgot-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .forgot-header h1 {
            font-family: 'Rajdhani', sans-serif;
            font-size: 2rem;
            font-weight: 600;
            color: #1a1a2e;
            margin-bottom: 0.5rem;
        }

        .forgot-header p {
            color: #64748b;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-floating .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1rem 0.5rem;
            height: auto;
            font-size: 1rem;
            transition: all 0.2s ease;
        }

        .form-floating .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.1);
        }

        .form-floating label {
            padding: 1rem;
            color: #64748b;
        }

        .btn-reset {
            width: 100%;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 12px;
            background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
            border: none;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        }

        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            background: linear-gradient(135deg, #43A047 0%, #2E7D32 100%);
        }

        .btn-reset:active {
            transform: translateY(0);
        }

        .forgot-links {
            margin-top: 1.5rem;
            text-align: center;
        }

        .forgot-links a {
            color: #2E7D32;
            text-decoration: none;
            font-size: 0.9rem;
            display: block;
            margin-bottom: 0.5rem;
            transition: color 0.2s ease;
        }

        .forgot-links a:hover {
            color: #1B5E20;
            text-decoration: underline;
        }

        .text-danger {
            color: #ef4444 !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .validation-summary-errors {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            color: #b91c1c;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .forgot-branding {
                display: none;
            }
            
            .forgot-form-panel {
                padding: 2rem;
            }

            .forgot-card {
                max-width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .forgot-form-panel {
                padding: 1.5rem;
            }
        }

        /* Mobile logo for small screens */
        .mobile-logo {
            display: none;
            text-align: center;
            margin-bottom: 2rem;
        }

        .mobile-logo img {
            max-width: 80px;
            height: auto;
        }

        @@media (max-width: 992px) {
            .mobile-logo {
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <!-- Left Branding Panel -->
        <div class="forgot-branding">
            <div class="branding-content">
                <img src="~/images/logo.png" alt="Ticket Masala" class="branding-logo" />
                <h1 class="branding-title">Ticket Masala</h1>
                <p class="branding-tagline">@Localizer["Don't worry, we'll help you get back into your account"]</p>
                <div class="branding-icon">
                    <i class="fas fa-unlock-keyhole"></i>
                </div>
            </div>
        </div>

        <!-- Right Form Panel -->
        <div class="forgot-form-panel">
            <div class="forgot-card">
                <!-- Mobile Logo -->
                <div class="mobile-logo">
                    <img src="~/images/logo.png" alt="Ticket Masala" />
                </div>

                <div class="forgot-header">
                    <h1>@Localizer["Reset Password"]</h1>
                    <p>@Localizer["Enter your email address and we'll send you a link to reset your password"]</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email"><i class="fas fa-envelope me-2"></i>@Localizer["Email"]</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-reset">
                        <i class="fas fa-paper-plane me-2"></i>@Localizer["Send Reset Link"]
                    </button>
                </form>

                <div class="forgot-links">
                    <a asp-page="./Login">
                        <i class="fas fa-arrow-left me-1"></i>@Localizer["Back to Sign In"]
                    </a>
                    <a asp-page="./Register">
                        <i class="fas fa-user-plus me-1"></i>@Localizer["Register as a new user"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
