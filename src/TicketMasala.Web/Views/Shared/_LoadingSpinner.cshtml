@* 
    Reusable Loading Spinner Component 
    Usage: <partial name="_LoadingSpinner" /> or <partial name="_LoadingSpinner" model="@("sm")" />
*@
@model string

@{
    var sizeClass = Model switch
    {
        "sm" => "spinner-sm",
        "lg" => "spinner-lg",
        _ => ""
    };
}

<div class="htmx-indicator d-inline-block">
    <div class="spinner @sizeClass" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
