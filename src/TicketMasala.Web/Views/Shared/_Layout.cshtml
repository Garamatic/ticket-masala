@using Microsoft.AspNetCore.Identity
@using TicketMasala.Web.Models
@using TicketMasala.Web
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var title = ViewData["Title"] ?? "Ticket Masala";
    var description = ViewData["Description"] ?? "Project and Ticket Management System";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var hideSidebar = ViewData["HideSidebar"] as bool? == true;
}
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@description" />
    <meta name="theme-color" content="#4CAF50" />
    <title>@title - Ticket Masala</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Rajdhani:wght@500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    
    @RenderSection("Styles", required: false)
</head>
<body hx-boost="true">
    <div class="app-wrapper">
        <!-- Sidebar Navigation -->
        @if (!hideSidebar)
        {
            <aside class="app-sidebar" id="sidebar">
                <div class="navbar-brand">
                    <img class="navbar-logo" src="~/images/logo.png" alt="Ticket Masala" />
                </div>
                
                <nav class="sidebar-nav" aria-label="Main navigation">
                    <ul class="list-unstyled">
                        <li class="sidebar-item">
                            <a class="sidebar-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home sidebar-icon"></i>
                                <span>@Localizer["Dashboard"]</span>
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link @(currentController == "Projects" ? "active" : "")" 
                                       asp-controller="Projects" asp-action="Index">
                                        <i class="fas fa-folder-open sidebar-icon"></i>
                                        <span>@Localizer["Projects"]</span>
                                    </a>
                                </li>
                                
                                <li class="sidebar-item">
                                    <a class="sidebar-link @(currentController == "Customer" ? "active" : "")" 
                                       asp-controller="Customer" asp-action="Index">
                                        <i class="fas fa-users sidebar-icon"></i>
                                        <span>@Localizer["Customers"]</span>
                                    </a>
                                </li>
                            }
                            
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Ticket" ? "active" : "")" 
                                   asp-controller="Ticket" asp-action="Index">
                                    <i class="fas fa-ticket-alt sidebar-icon"></i>
                                    <span>@Localizer["Tickets"]</span>
                                </a>
                            </li>
                            
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "KnowledgeBase" ? "active" : "")" 
                                   asp-controller="KnowledgeBase" asp-action="Index">
                                    <i class="fas fa-book sidebar-icon"></i>
                                    <span>@Localizer["Knowledge Base"]</span>
                                </a>
                            </li>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link @(currentController == "Manager" && currentAction == "TeamDashboard" ? "active" : "")" 
                                       asp-controller="Manager" asp-action="TeamDashboard">
                                        <i class="fas fa-chart-line sidebar-icon"></i>
                                        <span>@Localizer["Team Dashboard"]</span>
                                    </a>
                                </li>
                                
                                <li class="sidebar-item">
                                    <a class="sidebar-link @(currentController == "Manager" && currentAction == "DispatchBacklog" ? "active" : "")" 
                                       asp-controller="Manager" asp-action="DispatchBacklog">
                                        <i class="fas fa-robot sidebar-icon"></i>
                                        <span>@Localizer["GERDA Dispatch"]</span>
                                    </a>
                                </li>
                                
                                <!-- Redundant Manager Projects link removed -->
                            }
                        }
                        
                        <li class="sidebar-item mt-4">
                            <a class="sidebar-link @(currentAction == "Privacy" ? "active" : "")" 
                               asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt sidebar-icon"></i>
                                <span>@Localizer["Privacy"]</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </aside>
        }
        
        <!-- Mobile Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content Area -->
        <div class="app-main @(hideSidebar ? "ms-0" : "")" id="mainContent">
            <!-- Top Header -->
            <header class="app-header @(hideSidebar ? "header-landing" : "")">
                @if (hideSidebar)
                {
                    <!-- Landing Page Header - Three column layout -->
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <!-- Left spacer for symmetry -->
                        <div class="header-spacer"></div>
                        
                        <!-- Center: Logo and Brand -->
                        <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none header-brand">
                            <img src="~/images/logo.png" alt="Ticket Masala" height="42" class="me-2" />
                            <span class="h4 fw-bold text-dark mb-0 tracking-tight" style="font-family: 'Rajdhani', sans-serif;">Ticket Masala</span>
                        </a>
                        
                        <!-- Right: Actions (Dark mode, Language, Auth buttons) -->
                        <div class="d-flex align-items-center gap-2 header-actions">
                            <!-- Search (optional) - Hidden on landing page, shown for authenticated users -->
                            <div class="search-box d-none d-md-block me-2" style="max-width: 250px;">
                                <i class="fas fa-search search-icon text-muted"></i>
                                <input type="text" class="form-control border-0 bg-light" placeholder="@Localizer["Search..."]" style="padding-left: 2.5rem;" />
                            </div>
                        
                        <!-- Notifications -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <ul class="navbar-nav">
                                @await Component.InvokeAsync("Notification")
                            </ul>
                        }

                        <!-- Dark Mode Toggle -->
                        <button id="themeToggle" class="btn btn-ghost btn-icon rounded-circle" aria-label="Toggle dark mode" data-bs-toggle="tooltip" title="@Localizer["Toggle theme"]">
                            <i class="fas fa-moon" id="themeIcon"></i>
                        </button>
                        
                        <!-- Language Selector -->
                        <div class="dropdown">
                            <button class="btn btn-ghost btn-icon rounded-circle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="@Localizer["Select Language"]">
                                <i class="fas fa-globe"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" aria-labelledby="languageDropdown">
                                <li><h6 class="dropdown-header">@Localizer["Language"]</h6></li>
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>English</a></li>
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="fr" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>Français</a></li>
                                <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>Nederlands</a></li>
                            </ul>
                        </div>

                        <!-- User Menu -->
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="dropdown ms-2">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-dark text-decoration-none" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        @(UserManager.GetUserName(User)?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <span class="d-none d-lg-inline fw-medium small">@Localizer["Account"]</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2" aria-labelledby="userDropdown">
                                    <li>
                                        <div class="px-3 py-2 border-bottom mb-2">
                                            <div class="fw-bold text-truncate" style="max-width: 200px;">@UserManager.GetUserName(User)</div>
                                            <div class="small text-muted">@Localizer["Manage Account"]</div>
                                        </div>
                                    </li>
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fas fa-user-cog me-2 text-muted"></i> @Localizer["Profile"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item text-danger">                                                <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
                                <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
                            </div>
                        }
                        </div>
                    </div>
                }
                else
                {
                    <!-- Authenticated User Header -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <button class="btn btn-outline-primary btn-sm" id="sidebarToggle" aria-label="Toggle sidebar">
                                <i class="fas fa-bars"></i>
                            </button>
                            <h1 class="h5 m-0">@title</h1>
                        </div>
                        
                        <div class="d-flex align-items-center gap-2">
                            <!-- Search (optional) -->
                            <div class="search-box d-none d-md-block me-2" style="max-width: 250px;">
                                <i class="fas fa-search search-icon text-muted"></i>
                                <input type="text" class="form-control border-0 bg-light" placeholder="@Localizer["Search..."]" style="padding-left: 2.5rem;" />
                            </div>
                            
                            <!-- Notifications -->
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <ul class="navbar-nav">
                                    @await Component.InvokeAsync("Notification")
                                </ul>
                            }

                            <!-- Dark Mode Toggle -->
                            <button id="themeToggle" class="btn btn-ghost btn-icon rounded-circle" aria-label="Toggle dark mode" data-bs-toggle="tooltip" title="@Localizer["Toggle theme"]">
                                <i class="fas fa-moon" id="themeIcon"></i>
                            </button>
                            
                            <!-- Language Selector -->
                            <div class="dropdown">
                                <button class="btn btn-ghost btn-icon rounded-circle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="@Localizer["Select Language"]">
                                    <i class="fas fa-globe"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" aria-labelledby="languageDropdown">
                                    <li><h6 class="dropdown-header">@Localizer["Language"]</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>English</a></li>
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="fr" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>Français</a></li>
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><i class="fas fa-check-circle text-primary me-2 opacity-0"></i>Nederlands</a></li>
                                </ul>
                            </div>

                            <!-- User Menu -->
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <div class="dropdown ms-2">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-dark text-decoration-none" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                            @(UserManager.GetUserName(User)?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                        <span class="d-none d-lg-inline fw-medium small">@Localizer["Account"]</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2" aria-labelledby="userDropdown">
                                        <li>
                                            <div class="px-3 py-2 border-bottom mb-2">
                                                <div class="fw-bold text-truncate" style="max-width: 200px;">@UserManager.GetUserName(User)</div>
                                                <div class="small text-muted">@Localizer["Manage Account"]</div>
                                            </div>
                                        </li>
                                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fas fa-user-cog me-2 text-muted"></i> @Localizer["Profile"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <button type="submit" class="dropdown-item text-danger">                                                <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                }
            </header>

            <!-- Page Content -->
            <main class="app-content page-enter" role="main">
                <div class="container">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="border-top footer text-muted p-3 bg-white">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>&copy; @DateTime.Now.Year Ticket Masala - @Localizer["All rights reserved"]</span>
                        <span>
                            <a asp-controller="Home" asp-action="Privacy" class="text-muted">@Localizer["Privacy Policy"]</a>
                        </span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>

    <!-- HTMX Library -->
    <script src="https://unpkg.com/htmx.org@1.9.10" integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC" crossorigin="anonymous"></script>

    <!-- HTMX Configuration -->
    <meta name="htmx-config" content='{"includeAspNetAntiforgeryToken": true}'>

    <!-- Sidebar Toggle & Dark Mode Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar Toggle
            var sidebarToggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            var sidebarOverlay = document.getElementById('sidebarOverlay');
            
            if (sidebarToggle && sidebar && mainContent) {
                // Load saved sidebar state from localStorage (only for desktop)
                if (window.innerWidth >= 992) {
                    var savedSidebarState = localStorage.getItem('sidebarCollapsed');
                    if (savedSidebarState === 'true') {
                        sidebar.classList.add('collapsed');
                        mainContent.classList.add('expanded');
                    }
                }
                
                function toggleSidebar() {
                    // Mobile behavior
                    if (window.innerWidth < 992) {
                        sidebar.classList.toggle('show');
                        if (sidebarOverlay) {
                            sidebarOverlay.classList.toggle('show');
                        }
                    } 
                    // Desktop behavior
                    else {
                        sidebar.classList.toggle('collapsed');
                        mainContent.classList.toggle('expanded');
                        // Save state
                        localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
                    }
                }

                sidebarToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    toggleSidebar();
                });

                // Close sidebar when clicking overlay (mobile)
                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener('click', function() {
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                    });
                }
            }
            
            // Dark Mode Toggle
            var themeToggle = document.getElementById('themeToggle');
            var themeIcon = document.getElementById('themeIcon');
            var html = document.documentElement;
            
            if (themeToggle && themeIcon) {
                // Load saved theme from localStorage
                var savedTheme = localStorage.getItem('theme') || 'light';
                html.setAttribute('data-theme', savedTheme);
                updateThemeIcon(savedTheme);
                
                themeToggle.addEventListener('click', function() {
                    var currentTheme = html.getAttribute('data-theme') || 'light';
                    var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    
                    html.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                    updateThemeIcon(newTheme);
                    
                    // Show toast notification
                    if (window.toast) {
                        window.toast.info('Theme changed to ' + newTheme + ' mode');
                    }
                });
                
                function updateThemeIcon(theme) {
                    themeIcon.className = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
                }
            }
            
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
