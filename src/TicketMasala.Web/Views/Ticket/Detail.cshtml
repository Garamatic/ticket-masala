@model TicketMasala.Web.ViewModels.Tickets.TicketDetailsViewModel
@using System.Linq
@using TicketMasala.Web
@using TicketMasala.Web.Models;
@using TicketMasala.Web.ViewModels.Tickets

@{
    ViewData["Title"] = "Ticket Detail";
}

<h2>@ViewData["Title"]</h2>

<div class="row mb-4">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Left Column: Core Ticket Information -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Ticket #@Model.Guid.ToString().Substring(0, 8)</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <status-badge status="@Model.TicketStatus"></status-badge>
                    </dd>

                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">@(Model.CustomerName ?? "Unknown")</dd>

                    <dt class="col-sm-3">Responsible</dt>
                    <dd class="col-sm-9">@(Model.ResponsibleName ?? "Not Assigned")</dd>

                    <dt class="col-sm-3">Created</dt>
                    <dd class="col-sm-9">@Model.CreationDate.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-3">SLA Deadline</dt>
                    <dd class="col-sm-9">
                        @if (Model.CompletionTarget.HasValue)
                        {
                            <span class="@(Model.IsSlaBreached ? "text-danger fw-bold" : Model.DaysUntilSla <= 3 ? "text-warning" : "")">
                                @Model.CompletionTarget.Value.ToString("yyyy-MM-dd HH:mm")
                            </span>
                            <small class="ms-2">(@Model.SlaStatusLabel)</small>
                        }
                        else
                        {
                            <span class="text-muted">No deadline set</span>
                        }
                    </dd>

                    @if (Model.ProjectName != null)
                    {
                        <dt class="col-sm-3">Project</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectGuid">
                                @Model.ProjectName
                            </a>
                        </dd>
                    }

                    @if (Model.ParentTicketGuid.HasValue)
                    {
                        <dt class="col-sm-3">Parent Ticket</dt>
                        <dd class="col-sm-9">
                            <a asp-action="Detail" asp-route-id="@Model.ParentTicketGuid">
                                #@Model.ParentTicketGuid.Value.ToString().Substring(0, 8)
                            </a>
                        </dd>
                    }
                </dl>

                @* Custom Fields Display *@
                @if (ViewBag.CustomFields != null)
                {
                    <div class="mt-4">
                        @await Html.PartialAsync("_CustomFieldsDisplayPartial", ViewBag.CustomFields as IEnumerable<TicketMasala.Web.Models.Configuration.CustomFieldDefinition>)
                    </div>
                }

                <hr />

                @await Html.PartialAsync("_QualityReviewPartial", Model)

                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-comments me-2"></i> Discussion
                        </h5>
                        <span class="badge bg-secondary">@Model.Comments.Count comments</span>
                    </div>
                    <div class="card-body">
                        <div id="commentList">
                            @await Html.PartialAsync("_CommentListPartial", Model.Comments)
                        </div>

                        <form asp-action="AddComment" method="post" 
                              hx-post="@Url.Action("AddComment", "Ticket")" 
                              hx-target="#commentList"
                              hx-swap="innerHTML"
                              hx-on::after-request="if(event.detail.successful) this.reset()">
                            <input type="hidden" name="id" value="@Model.Guid" />
                            <div class="mb-3">
                                <label for="commentBody" class="form-label">Add a comment</label>
                                <div class="btn-toolbar mb-1" role="toolbar">
                                    <div class="btn-group me-2" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="insertFormat('bold')" title="Bold"><i class="fas fa-bold"></i></button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="insertFormat('italic')" title="Italic"><i class="fas fa-italic"></i></button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="insertFormat('list')" title="List"><i class="fas fa-list"></i></button>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                            <i class="fas fa-at"></i> Mention
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><button class="dropdown-item" type="button" onclick="insertMention('Manager')">Manager</button></li>
                                            <!-- Ideally this would be populated dynamically -->
                                            <li><button class="dropdown-item" type="button" onclick="insertMention('Support')">Support</button></li>
                                        </ul>
                                    </div>
                                </div>
                                <textarea class="form-control" id="commentBody" name="commentBody" rows="3" required></textarea>
                                <div class="form-text">Supports Markdown (**bold**, *italic*, - list)</div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="isInternal" name="isInternal" value="true">
                                    <label class="form-check-label" for="isInternal">Internal Note (Team only)</label>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i> Post Comment
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Attachments</dt>
                    <dd class="col-sm-9">
                        @if (Model.Attachments.Any())
                        {
                            <ul class="list-unstyled mb-3">
                                @foreach (var doc in Model.Attachments)
                                {
                                    <li class="mb-2">
                                        <div class="d-flex align-items-center">
                                            <a asp-action="DownloadAttachment" asp-route-id="@doc.Id" class="text-decoration-none me-2">
                                                📎 @doc.FileName
                                            </a>
                                            @if (doc.ContentType.StartsWith("image/") || doc.ContentType == "application/pdf")
                                            {
                                                <a asp-action="PreviewAttachment" asp-route-id="@doc.Id" target="_blank" class="badge bg-info text-dark text-decoration-none me-2">
                                                    <i class="fas fa-eye"></i> Preview
                                                </a>
                                            }
                                            @if (doc.IsPublic)
                                            {
                                                <span class="badge bg-success me-2">Public</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary me-2">Internal</span>
                                            }
                                            <small class="text-muted">(@(doc.FileSize / 1024) KB) - @doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</small>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted small">No attachments yet.</p>
                        }

                        <form asp-action="UploadAttachment" method="post" enctype="multipart/form-data" class="d-flex gap-2 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ticketId" value="@Model.Guid" />
                            <input type="file" name="file" class="form-control form-control-sm" required />
                            <div class="form-check form-switch mb-0">
                                <input class="form-check-input" type="checkbox" id="isPublic" name="isPublic" value="true">
                                <label class="form-check-label small" for="isPublic">Public</label>
                            </div>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Upload</button>
                        </form>
                    </dd>
                </dl>

                @if (Model.SubTickets.Any())
                {
                    <hr />
                    <h5>Sub-Tickets</h5>
                    <ul class="list-group mb-3">
                        @foreach (var sub in Model.SubTickets)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Detail" asp-route-id="@sub.Guid">@sub.Description</a>
                                </div>
                                <span class="badge bg-secondary">@sub.TicketStatus</span>
                            </li>
                        }
                    </ul>
                }

                @if (Model.AuditLogs.Any())
                {
                    <hr />
                    <h5 class="text-muted">Audit Log</h5>
                    <div class="table-responsive">
                        <table class="table table-sm text-muted small">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.AuditLogs)
                                {
                                    <tr>
                                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@(log.User?.Name ?? "System")</td>
                                        <td>@log.Action</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.PropertyName))
                                            {
                                                <span>@log.PropertyName: @log.OldValue &rarr; @log.NewValue</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Right Column: GERDA AI Insights -->
    <!-- Right Column: GERDA AI Insights (Internal Only) -->
    @if (User.IsInRole(TicketMasala.Web.Utilities.Constants.RoleAdmin) || User.IsInRole(TicketMasala.Web.Utilities.Constants.RoleEmployee))
    {
        <div class="col-md-4">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🤖 GERDA AI Insights</h5>
                </div>
                <div class="card-body">
                    <!-- Complexity Estimation -->
                    <div class="mb-3">
                        <h6 class="text-primary">Complexity</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-4">@Model.EstimatedEffortPoints points</span>
                            <span class="badge bg-secondary">@Model.ComplexityLabel</span>
                        </div>
                        <div class="progress mt-2 progress-sm">
                            <div class="progress-bar" 
                                 role="progressbar" 
                                 style="width: @((Model.EstimatedEffortPoints / 21.0 * 100))%"
                                 aria-valuenow="@Model.EstimatedEffortPoints" 
                                 aria-valuemin="0" 
                                 aria-valuemax="21">
                            </div>
                        </div>
                    </div>

                    <!-- Priority Ranking -->
                    <div class="mb-3">
                        <h6 class="text-primary">Priority (WSJF)</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fs-4">@Model.PriorityScore.ToString("F1")</span>
                            <span class="@Model.UrgencyBadgeClass">@Model.UrgencyLabel</span>
                        </div>
                        <small class="text-muted">Higher score = more urgent</small>
                    </div>

                    <!-- AI Tags -->
                    @if (Model.GerdaTagsList.Any())
                    {
                        <div class="mb-3">
                            <h6 class="text-primary">AI Tags</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var tag in Model.GerdaTagsList)
                                {
                                    <span class="badge bg-light text-dark border">🏷️ @tag</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Recommended Agent (if unassigned) -->
            @if (Model.RecommendedAgent != null)
            {
                <div class="card border-success mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">✨ Recommended Agent</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@Model.RecommendedAgent.AgentName</h6>
                        <p class="mb-2">
                            <span class="badge bg-success">@Model.RecommendedAgent.AffinityLabel</span>
                            <span class="text-muted ms-2">Score: @Model.RecommendedAgent.AffinityScore.ToString("F2")</span>
                        </p>
                        
                        <div class="mb-2">
                            <small class="text-muted">Current Workload</small>
                            <div class="progress progress-md">
                                <div class="progress-bar @(Model.RecommendedAgent.WorkloadPercentage > 80 ? "bg-warning" : "bg-success")" 
                                     role="progressbar" 
                                     style="width: @Model.RecommendedAgent.WorkloadPercentage%"
                                     aria-valuenow="@Model.RecommendedAgent.WorkloadPercentage" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    @Model.RecommendedAgent.CurrentWorkload / @Model.RecommendedAgent.MaxCapacity pts
                                </div>
                            </div>
                        </div>

                        <form asp-action="AssignToRecommended" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ticketGuid" value="@Model.Guid" />
                            <input type="hidden" name="agentId" value="@Model.RecommendedAgent.AgentId" />
                            <button type="submit" class="btn btn-success btn-sm w-100">
                                Assign to @Model.RecommendedAgent.AgentName
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (Model.CompletionTarget.HasValue && Model.TicketStatus != TicketMasala.Web.Models.Status.Completed)
{
    var timeRemaining = Model.CompletionTarget.Value - DateTime.UtcNow;
    var isOverdue = timeRemaining.TotalSeconds < 0;
    var isAtRisk = !isOverdue && timeRemaining.TotalHours < 24;

    if (isOverdue)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <div>
                <strong>Overdue!</strong> This ticket was due on @Model.CompletionTarget.Value.ToString("g").
            </div>
        </div>
    }
    else if (isAtRisk)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Due Soon!</strong> This ticket is due in @Math.Round(timeRemaining.TotalHours) hours (@Model.CompletionTarget.Value.ToString("g")).
            </div>
        </div>
    }
}

<!-- Action Buttons -->
<div class="mt-3 page-actions">
    <a asp-action="Edit" asp-route-id="@Model.Guid" class="btn btn-outline-primary">
        <i class="fas fa-edit me-2"></i> Edit Ticket
    </a>
    
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectGuid" class="btn btn-outline-secondary">
            <i class="fas fa-folder me-2"></i> View Project
        </a>
    }
    else
    {
        <a asp-controller="Projects" asp-action="CreateFromTicket" asp-route-ticketId="@Model.Guid" class="btn btn-outline-success">
            <i class="fas fa-plus-circle me-2"></i> Create Project
        </a>
    }
    
    <button type="button" onclick="window.history.back()" class="btn btn-outline-secondary">Back</button>
</div>

@section Scripts {
    <script src="~/lib/marked/marked.min.js"></script>
    <script src="~/js/ticket-detail.js" asp-append-version="true"></script>
}
