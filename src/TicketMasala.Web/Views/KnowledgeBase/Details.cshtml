@model TicketMasala.Web.Models.KnowledgeBaseArticle

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Knowledge Base</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="card shadow-lg">
        <div class="card-header bg-white">
            <h1 class="h3 mb-0">@Model.Title</h1>
            <div class="text-muted small mt-2">
                By @(Model.Author?.UserName ?? "Unknown") | Created: @Model.CreatedAt.ToString("g")
                @if (Model.UpdatedAt.HasValue)
                {
                    <span>| Updated: @Model.UpdatedAt.Value.ToString("g")</span>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="article-content mb-4" style="white-space: pre-wrap;">
                @Model.Content
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <div class="mb-3">
                    <i class="fas fa-tags me-2 text-muted"></i>
                    @foreach (var tag in Model.Tags.Split(','))
                    {
                        <span class="badge bg-light text-dark border me-1">@tag.Trim()</span>
                    }
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Edit Article</a>
            }
        </div>
    </div>
</div>
