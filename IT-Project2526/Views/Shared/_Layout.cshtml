@using Microsoft.AspNetCore.Identity
@using IT_Project2526.Models
@using IT_Project2526
@using Microsoft.Extensions.Localization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IStringLocalizer<SharedResource> Localizer

@{
    var title = ViewData["Title"] ?? "Ticket Masala";
    var description = ViewData["Description"] ?? "Project and Ticket Management System";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@description" />
    <meta name="theme-color" content="#4CAF50" />
    <title>@title - Ticket Masala</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Rajdhani:wght@500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bundled CSS (Bootstrap + Design System + Site CSS) -->
    <link rel="stylesheet" href="~/css/bundle.css" asp-append-version="true" />
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app-wrapper">
        <!-- Sidebar Navigation -->
        <aside class="app-sidebar" id="sidebar">
            <div class="navbar-brand">
                <img class="navbar-logo" src="~/images/logo.png" alt="Ticket Masala" />
            </div>
            
            <nav class="sidebar-nav" aria-label="Main navigation">
                <ul class="list-unstyled">
                    <li class="sidebar-item">
                        <a class="sidebar-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" 
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home sidebar-icon"></i>
                            <span>@Localizer["Dashboard"]</span>
                        </a>
                    </li>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Projects" ? "active" : "")" 
                                   asp-controller="Projects" asp-action="Index">
                                    <i class="fas fa-folder-open sidebar-icon"></i>
                                    <span>@Localizer["Projects"]</span>
                                </a>
                            </li>
                            
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Customer" ? "active" : "")" 
                                   asp-controller="Customer" asp-action="Index">
                                    <i class="fas fa-users sidebar-icon"></i>
                                    <span>@Localizer["Customers"]</span>
                                </a>
                            </li>
                        }
                        
                        <li class="sidebar-item">
                            <a class="sidebar-link @(currentController == "Ticket" ? "active" : "")" 
                               asp-controller="Ticket" asp-action="Index">
                                <i class="fas fa-ticket-alt sidebar-icon"></i>
                                <span>@Localizer["Tickets"]</span>
                            </a>
                        </li>
                        
                        <li class="sidebar-item">
                            <a class="sidebar-link @(currentController == "KnowledgeBase" ? "active" : "")" 
                               asp-controller="KnowledgeBase" asp-action="Index">
                                <i class="fas fa-book sidebar-icon"></i>
                                <span>@Localizer["Knowledge Base"]</span>
                            </a>
                        </li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Manager" && currentAction == "TeamDashboard" ? "active" : "")" 
                                   asp-controller="Manager" asp-action="TeamDashboard">
                                    <i class="fas fa-chart-line sidebar-icon"></i>
                                    <span>@Localizer["Team Dashboard"]</span>
                                </a>
                            </li>
                            
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Manager" && currentAction == "DispatchBacklog" ? "active" : "")" 
                                   asp-controller="Manager" asp-action="DispatchBacklog">
                                    <i class="fas fa-robot sidebar-icon"></i>
                                    <span>@Localizer["GERDA Dispatch"]</span>
                                </a>
                            </li>
                            
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Manager" && currentAction == "Projects" ? "active" : "")" 
                                   asp-controller="Manager" asp-action="Projects">
                                    <i class="fas fa-tasks sidebar-icon"></i>
                                    <span>@Localizer["All Projects"]</span>
                                </a>
                            </li>
                        }
                    }
                    
                    <li class="sidebar-item mt-4">
                        <a class="sidebar-link @(currentAction == "Privacy" ? "active" : "")" 
                           asp-controller="Home" asp-action="Privacy">
                            <i class="fas fa-shield-alt sidebar-icon"></i>
                            <span>@Localizer["Privacy"]</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        
        <!-- Mobile Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content Area -->
        <div class="app-main" id="mainContent">
            <!-- Top Header -->
            <header class="app-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <button class="btn btn-outline-primary btn-sm" id="sidebarToggle" aria-label="Toggle sidebar">
                            <i class="fas fa-bars"></i>
                        </button>
                        <h1 class="h5 m-0">@title</h1>
                    </div>
                    
                    <div class="d-flex align-items-center gap-3">
                        <!-- Search (optional) -->
                        <div class="search-box d-none d-md-block" style="max-width: 300px;">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" class="form-control" placeholder="@Localizer["Search..."]" />
                        </div>
                        
                        <!-- Notifications -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <ul class="navbar-nav">
                                @await Component.InvokeAsync("Notification")
                            </ul>
                        }

                        <!-- Dark Mode Toggle -->
                        <button id="themeToggle" class="btn btn-outline-primary btn-sm" aria-label="Toggle dark mode" title="@Localizer["Toggle dark/light mode"]">
                            <i class="fas fa-moon" id="themeIcon"></i>
                        </button>
                        
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="@Localizer["Select Language"]">
                                    <i class="fas fa-globe fa-lg"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">English</a></li>
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="fr" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">Fran√ßais</a></li>
                                    <li><a class="dropdown-item" asp-controller="Culture" asp-action="SetCulture" asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">Nederlands</a></li>
                                </ul>
                            </li>
                        </ul>
                        <!-- User Menu -->
                        <ul class="navbar-nav">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle me-1"></i> @Localizer["Hello {0}!", UserManager.GetUserName(User) ?? "User"]
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="app-content page-enter" role="main">
                <div class="container">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="border-top footer text-muted p-3 bg-white">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>&copy; @DateTime.Now.Year Ticket Masala - @Localizer["All rights reserved"]</span>
                        <span>
                            <a asp-controller="Home" asp-action="Privacy" class="text-muted">@Localizer["Privacy Policy"]</a>
                        </span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bundled Scripts (jQuery + Bootstrap + Site.js + Toast.js) -->
    <script src="~/js/bundle.js" asp-append-version="true"></script>

    <!-- Sidebar Toggle & Dark Mode Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar Toggle
            var sidebarToggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            var sidebarOverlay = document.getElementById('sidebarOverlay');
            
            if (sidebarToggle && sidebar && mainContent) {
                // Load saved sidebar state from localStorage (only for desktop)
                if (window.innerWidth >= 992) {
                    var savedSidebarState = localStorage.getItem('sidebarCollapsed');
                    if (savedSidebarState === 'true') {
                        sidebar.classList.add('collapsed');
                        mainContent.classList.add('expanded');
                    }
                }
                
                function toggleSidebar() {
                    // Mobile behavior
                    if (window.innerWidth < 992) {
                        sidebar.classList.toggle('show');
                        if (sidebarOverlay) {
                            sidebarOverlay.classList.toggle('show');
                        }
                    } 
                    // Desktop behavior
                    else {
                        sidebar.classList.toggle('collapsed');
                        mainContent.classList.toggle('expanded');
                        // Save state
                        localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
                    }
                }

                sidebarToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    toggleSidebar();
                });

                // Close sidebar when clicking overlay (mobile)
                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener('click', function() {
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                    });
                }
            }
            
            // Dark Mode Toggle
            var themeToggle = document.getElementById('themeToggle');
            var themeIcon = document.getElementById('themeIcon');
            var html = document.documentElement;
            
            if (themeToggle && themeIcon) {
                // Load saved theme from localStorage
                var savedTheme = localStorage.getItem('theme') || 'light';
                html.setAttribute('data-theme', savedTheme);
                updateThemeIcon(savedTheme);
                
                themeToggle.addEventListener('click', function() {
                    var currentTheme = html.getAttribute('data-theme') || 'light';
                    var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    
                    html.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                    updateThemeIcon(newTheme);
                    
                    // Show toast notification
                    if (window.toast) {
                        window.toast.info('Theme changed to ' + newTheme + ' mode');
                    }
                });
                
                function updateThemeIcon(theme) {
                    themeIcon.className = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
                }
            }
            
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>