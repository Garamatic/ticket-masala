@model IT_Project2526.ViewModels.EditTicketViewModel
@using IT_Project2526.Models.Configuration

@{
    var entityLabels = ViewBag.EntityLabels as EntityLabels ?? new EntityLabels();
    var workItemLabel = entityLabels.WorkItem ?? "Ticket";
    ViewData["Title"] = $"Edit {workItemLabel}: " + Model.Guid;
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-edit text-primary me-2"></i>
            Edit @workItemLabel
        </h1>
        <p class="page-subtitle">Update @workItemLabel.ToLower() details</p>
    </div>
    <div class="page-actions">
        <a asp-action="Detail" asp-route-id="@Model.Guid" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Details
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Guid" />

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="TicketStatus" class="form-label">Status</label>
                        @{
                            var statusList = ViewBag.ValidStatuses as SelectList ?? Html.GetEnumSelectList<IT_Project2526.Models.Status>();
                        }
                        <select asp-for="TicketStatus" asp-items="statusList" class="form-select"></select>
                        <span asp-validation-for="TicketStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="CompletionTarget" class="form-label">Target Completion Date</label>
                        <input asp-for="CompletionTarget" class="form-control" type="date" />
                        <span asp-validation-for="CompletionTarget" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="ResponsibleUserId" class="form-label">Responsible</label>
                        <select asp-for="ResponsibleUserId" asp-items="Model.ResponsibleUsers" class="form-select">
                            <option value="">-- Unassigned --</option>
                        </select>
                        <span asp-validation-for="ResponsibleUserId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* Custom Fields from Domain Configuration *@
            @if (ViewBag.CustomFields != null)
            {
                <hr class="my-4" />
                @await Html.PartialAsync("_CustomFieldsPartial", ViewBag.CustomFields as IEnumerable<CustomFieldDefinition>)
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                    Save Changes
                </button>
                <a asp-action="Detail" asp-route-id="@Model.Guid" class="btn btn-outline-secondary ms-2">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
