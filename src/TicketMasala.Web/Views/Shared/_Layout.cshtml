                                                    <i class="fas fa-chart-pie sidebar-icon"></i>
                                                    <span>Campaign Dashboard</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Eht" && currentController == "Workbench" ? "active" : "")" 
                                       asp-area="Eht" asp-controller="Workbench" asp-action="Index">
                                                    <i class="fas fa-clipboard-check sidebar-icon"></i>
                                                    <span>Manual Review</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Eht" && currentController == "AddressValidation" ? "active" : "")" 
                                       asp-area="Eht" asp-controller="AddressValidation" asp-action="Index">
                                                    <i class="fas fa-map-marked-alt sidebar-icon"></i>
                                                    <span>Address Validation</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Eht" && currentController == "EntityClustering" ? "active" : "")" 
                                       asp-area="Eht" asp-controller="EntityClustering" asp-action="Index">
                                                    <i class="fas fa-project-diagram sidebar-icon"></i>
                                                    <span>Entity Clustering</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Eht" && currentController == "BpValidator" ? "active" : "")" 
                                       asp-area="Eht" asp-controller="BpValidator" asp-action="Index">
                                                    <i class="fas fa-id-badge sidebar-icon"></i>
                                                    <span>BP Validator</span>
                                                </a>
                                            </li>

                                            <!-- Admin Panel Section -->
                                            <li class="sidebar-item mt-3">
                                                <div class="sidebar-section-header text-muted small px-3 py-2">
                                                    <i class="fas fa-cog me-2"></i>ADMIN
                                                </div>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" && currentController == "Admin" ? "active" : "")" 
                                       asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                                    <i class="fas fa-tachometer-alt sidebar-icon"></i>
                                                    <span>Admin Dashboard</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" && currentController == "Users" ? "active" : "")" 
                                       asp-area="Admin" asp-controller="Users" asp-action="Index">
                                                    <i class="fas fa-users-cog sidebar-icon"></i>
                                                    <span>User Management</span>
                                                </a>
                                            </li>
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Admin" && currentController == "System" ? "active" : "")" 
                                       asp-area="Admin" asp-controller="System" asp-action="Index">
                                                    <i class="fas fa-heartbeat sidebar-icon"></i>
                                                    <span>System Health</span>
                                                </a>
                                            </li>

                                            <!-- Redundant Manager Projects link removed -->
                            }
                        }

                            <li class="sidebar-item mt-4">
                                <a class="sidebar-link @(currentAction == "Privacy" ? "active" : "")" 
                               asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-shield-alt sidebar-icon"></i>
                                    <span>@Localizer["Privacy"]</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
        }

        <!-- Mobile Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content Area -->
        <div class="app-main @(hideSidebar ? "ms-0" : "")" id="mainContent">
