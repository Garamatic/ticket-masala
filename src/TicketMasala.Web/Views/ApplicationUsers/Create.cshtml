@model TicketMasala.Web.ViewModels.ApplicationUsers.UserCreateViewModel
@using TicketMasala.Web.Utilities

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label fw-bold">User Role</label>
                        <select asp-for="Role" class="form-select" id="roleSelect">
                            @foreach (var role in ViewBag.Roles as List<string> ?? new List<string>())
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                        <div class="form-text">Role determines permissions and user type (e.g. Employee vs Customer).</div>
                    </div>

                    <!-- Employee Specific Fields -->
                    <div id="employeeFields" style="display: none;">
                        <h5 class="mt-4 mb-3 border-bottom pb-2 text-primary">Employee Details</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Team" class="form-label">Team</label>
                                <input asp-for="Team" class="form-control" placeholder="e.g. Core Engineering" />
                                <span asp-validation-for="Team" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Level" class="form-label">Seniority Level</label>
                                <select asp-for="Level" class="form-select" asp-items="Html.GetEnumSelectList<EmployeeType>()"></select>
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxCapacityPoints" class="form-label">Max Workload Points</label>
                                <input asp-for="MaxCapacityPoints" class="form-control" type="number" />
                                <span asp-validation-for="MaxCapacityPoints" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Language" class="form-label">Languages Spoken</label>
                                <input asp-for="Language" class="form-control" placeholder="e.g. EN, NL, FR" />
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Create User</button>
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            function toggleEmployeeFields() {
                var role = $('#roleSelect').val();
                if (role === '@Constants.RoleEmployee' || role === '@Constants.RoleAdmin') {
                    $('#employeeFields').slideDown();
                } else {
                    $('#employeeFields').slideUp();
                }
            }

            // Initial check
            toggleEmployeeFields();

            // Check on change
            $('#roleSelect').change(toggleEmployeeFields);
        });
    </script>
}
