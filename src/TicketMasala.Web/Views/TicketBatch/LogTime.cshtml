@{
    ViewData["Title"] = "Log Time";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Log Time on Ticket</h4>
                    <p class="mb-0 text-muted">@ViewBag.TicketDescription</p>
                </div>
                <div class="card-body">
                    <form asp-action="LogTime" method="post">
                        <input type="hidden" name="id" value="@ViewBag.TicketGuid" />

                        <div class="mb-3">
                            <label for="hours" class="form-label">Hours Worked</label>
                            <input type="number" class="form-control" id="hours" name="hours" step="0.25" min="0.1"
                                max="24" required placeholder="e.g., 2.5" />
                            <span class="text-danger" id="hours-validation"></span>
                        </div>

                        <div class="mb-3">
                            <label for="date" class="form-label">Date</label>
                            <input type="date" class="form-control" id="date" name="date"
                                value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Work Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required
                                placeholder="Describe the work you performed..."></textarea>
                            <span class="text-danger" id="description-validation"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Ticket" asp-action="Detail" asp-route-id="@ViewBag.TicketGuid"
                                class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Log Time</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
