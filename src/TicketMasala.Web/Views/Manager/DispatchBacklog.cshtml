@model TicketMasala.Web.ViewModels.GERDA.GerdaDispatchViewModel
@using TicketMasala.Web.Models

@{
    ViewData["Title"] = "GERDA Dispatch Backlog";
    ViewData["Description"] = "AI-powered ticket assignment dashboard";
}

<!-- Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-robot text-primary me-2"></i>
            GERDA Dispatch Backlog
        </h1>
        <p class="page-subtitle">AI-powered ticket assignment and workload balancing</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-outline-primary" onclick="location.reload()">
            <i class="fas fa-sync-alt me-2"></i>
            Refresh
        </button>
    </div>
</div>

<!-- Statistics Overview -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-value">@Model.Statistics.TotalUnassignedTickets</div>
            <div class="stat-label">Unassigned Tickets</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-value">@Model.Statistics.TicketsWithAgentRecommendation</div>
            <div class="stat-label">With AI Recommendations</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-value">@Model.Statistics.TotalAvailableAgents</div>
            <div class="stat-label">Available Agents</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-value text-danger">@Model.Statistics.TicketsOlderThan24Hours</div>
            <div class="stat-label">Tickets > 24h Old</div>
        </div>
    </div>
</div>

<!-- Batch Controls -->
@if (Model.UnassignedTickets.Any())
{
    <div class="batch-controls">
        <div class="row align-items-center">
            <div class="col-md-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="selectAll" onchange="toggleSelectAll(this)">
                    <label class="form-check-label fw-bold" for="selectAll">
                        Select All (<span id="selectedCount">0</span> selected)
                    </label>
                </div>
            </div>
            <div class="col-md-8 text-end">
                <button class="btn btn-primary" onclick="batchAssignWithGerda()" id="batchGerdaBtn" disabled>
                    <i class="fas fa-robot me-2"></i>
                    Auto-Assign Selected (GERDA)
                </button>
                <button class="btn btn-secondary" onclick="showManualBatchAssign()" id="batchManualBtn" disabled>
                    <i class="fas fa-user-cog me-2"></i>
                    Manual Assign Selected
                </button>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="row">
    <!-- Tickets List -->
    <div class="col-lg-8">
        <h3 class="mb-3">
            <i class="fas fa-inbox me-2"></i>
            Pending Tickets
        </h3>
        
        @if (!Model.UnassignedTickets.Any())
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <strong>All clear!</strong> No unassigned tickets in the backlog.
            </div>
        }
        else
        {
            <div id="ticketsList">
                @foreach (var ticket in Model.UnassignedTickets)
                {
                    <div class="ticket-card" data-ticket-id="@ticket.Guid">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="form-check">
                                <input class="form-check-input ticket-checkbox" type="checkbox" 
                                       value="@ticket.Guid" onchange="updateSelectedCount()">
                                <label class="form-check-label">
                                    <strong>Ticket #@ticket.Guid.ToString()[..8]</strong>
                                </label>
                            </div>
                            <div>
                                @if (ticket.PriorityScore >= 75)
                                {
                                    <span class="priority-badge priority-high">
                                        <i class="fas fa-exclamation-circle"></i> HIGH
                                    </span>
                                }
                                else if (ticket.PriorityScore >= 40)
                                {
                                    <span class="priority-badge priority-medium">
                                        <i class="fas fa-exclamation-triangle"></i> MEDIUM
                                    </span>
                                }
                                else
                                {
                                    <span class="priority-badge priority-low">
                                        <i class="fas fa-info-circle"></i> LOW
                                    </span>
                                }
                                <span class="badge bg-secondary ms-2">
                                    <i class="fas fa-clock"></i> @ticket.TimeInBacklogDisplay
                                </span>
                            </div>
                        </div>

                        <p class="mb-2">@ticket.Description</p>

                        <div class="row mb-2">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>
                                    Customer: <strong>@ticket.CustomerName</strong>
                                </small>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="fas fa-chart-line me-1"></i>
                                    Effort: <strong>@ticket.EstimatedEffortPoints pts</strong> | 
                                    Priority: <strong>@ticket.PriorityScore.ToString("F1")</strong>
                                </small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(ticket.GerdaTags))
                        {
                            <div class="mb-2">
                                @foreach (var tag in ticket.GerdaTags.Split(','))
                                {
                                    <span class="gerda-tag">@tag</span>
                                }
                            </div>
                        }

                        @if (ticket.RecommendedProjectGuid.HasValue)
                        {
                            <div class="alert alert-info py-2 mb-2">
                                <i class="fas fa-lightbulb me-2"></i>
                                <strong>Recommended Project:</strong> @ticket.RecommendedProjectName
                            </div>
                        }

                        @if (ticket.RecommendedAgents.Any())
                        {
                            <div class="mt-3">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-robot me-1"></i>
                                    GERDA Agent Recommendations:
                                </h6>
                                @for (int i = 0; i < ticket.RecommendedAgents.Count; i++)
                                {
                                    var agent = ticket.RecommendedAgents[i];
                                    var isTopPick = i == 0;
                                    
                                    <div class="agent-recommendation @(isTopPick ? "top-pick" : "")" 
                                         onclick="assignTicketToAgent('@ticket.Guid', '@agent.AgentId', '@agent.AgentName')">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <strong>
                                                    @if (isTopPick)
                                                    {
                                                        <i class="fas fa-star text-warning me-1"></i>
                                                    }
                                                    @agent.AgentName
                                                </strong>
                                                <br>
                                                <small class="text-muted">
                                                    @agent.Team
                                                    @if (!string.IsNullOrEmpty(agent.Language))
                                                    {
                                                        <span> | <i class="fas fa-language"></i> @agent.Language</span>
                                                    }
                                                </small>
                                            </div>
                                            <div class="text-end">
                                                <span class="score-badge @(agent.Score >= 70 ? "score-high" : agent.Score >= 40 ? "score-medium" : "score-low")">
                                                    Score: @agent.ScoreDisplay
                                                </span>
                                                <br>
                                                <small class="text-muted">Load: @agent.WorkloadDisplay</small>
                                            </div>
                                        </div>
                                        <div class="workload-bar">
                                            <div class="workload-fill @(agent.WorkloadPercentage < 60 ? "workload-low" : agent.WorkloadPercentage < 90 ? "workload-medium" : "workload-high")" 
                                                 style="width: @(Math.Min(agent.WorkloadPercentage, 100))%"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning py-2 mt-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                No GERDA recommendations available. Manual assignment required.
                            </div>
                        }

                        <div class="mt-3 text-end">
                            <button class="btn btn-sm btn-outline-primary" 
                                    onclick="showAssignModal('@ticket.Guid')">
                                <i class="fas fa-user-plus me-1"></i>
                                Manual Assign
                            </button>
                        </div>

                        <!-- Ticket Status Badge -->
                        <div class="mt-2">
                            @if (ticket.Status.ToString() == "Dispatching")
                            {
                                <span class="badge-dispatching">Dispatching</span>
                            }
                            else if (ticket.Status.ToString() == "Anticipation")
                            {
                                <span class="badge-anticipation">Anticipation</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@ticket.Status</span>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Agent Availability Sidebar -->
    <div class="col-lg-4">
        <div class="position-sticky" style="top: 1rem;">
            <h3 class="mb-3">
                <i class="fas fa-users me-2"></i>
                Agent Availability
            </h3>
            
            @foreach (var team in Model.AvailableAgents.GroupBy(a => a.Team))
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <strong>@team.Key</strong>
                    </div>
                    <div class="card-body p-2">
                        @foreach (var agent in team)
                        {
                            <div class="mb-3 pb-2 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@agent.Name</strong>
                                        <br>
                                        <small class="text-muted">
                                            @agent.CurrentWorkload / @agent.MaxCapacity tickets
                                            <br>
                                            @agent.CurrentEffortPoints / @agent.MaxCapacityPoints points
                                        </small>
                                    </div>
                                    <div>
                                        @if (agent.IsAvailable)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Available
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Full
                                            </span>
                                        }
                                    </div>
                                </div>
                                <div class="workload-bar mt-2">
                                    <div class="workload-fill @(agent.WorkloadPercentage < 60 ? "workload-low" : agent.WorkloadPercentage < 90 ? "workload-medium" : "workload-high")" 
                                         style="width: @(Math.Min(agent.WorkloadPercentage, 100))%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Manual Assignment Modal -->
<div class="modal fade" id="assignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="assignTicketGuid">
                
                <div class="mb-3">
                    <label class="form-label">Agent</label>
                    <select class="form-select" id="assignAgentId">
                        <option value="">-- Select Agent --</option>
                        @foreach (var agent in Model.AvailableAgents.OrderBy(a => a.Team).ThenBy(a => a.Name))
                        {
                            <option value="@agent.Id">@agent.Name (@agent.Team) - @agent.CurrentWorkload/@agent.MaxCapacity</option>
                        }
                    </select>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Project (Optional)</label>
                    <select class="form-select" id="assignProjectGuid">
                        <option value="">-- No Project --</option>
                        @foreach (var project in Model.Projects.OrderBy(p => p.Name))
                        {
                            <option value="@project.Guid">@project.Name (@project.CustomerName)</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitManualAssign()">Assign</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let selectedTickets = new Set();

    function updateSelectedCount() {
        selectedTickets.clear();
        document.querySelectorAll('.ticket-checkbox:checked').forEach(cb => {
            selectedTickets.add(cb.value);
            cb.closest('.ticket-card').classList.add('selected');
        });
        document.querySelectorAll('.ticket-checkbox:not(:checked)').forEach(cb => {
            cb.closest('.ticket-card').classList.remove('selected');
        });
        
        const count = selectedTickets.size;
        document.getElementById('selectedCount').textContent = count;
        document.getElementById('batchGerdaBtn').disabled = count === 0;
        document.getElementById('batchManualBtn').disabled = count === 0;
    }

    function toggleSelectAll(checkbox) {
        document.querySelectorAll('.ticket-checkbox').forEach(cb => {
            cb.checked = checkbox.checked;
        });
        updateSelectedCount();
    }

    async function assignTicketToAgent(ticketGuid, agentId, agentName) {
        if (!confirm(`Assign this ticket to ${agentName}?`)) {
            return;
        }

        try {
            const response = await fetch('@Url.Action("AssignTicket", "Manager")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: new URLSearchParams({
                    ticketGuid: ticketGuid,
                    agentId: agentId
                })
            });

            const result = await response.json();
            
            if (result.success) {
                alert('Ticket assigned successfully!');
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to assign ticket');
        }
    }

    async function batchAssignWithGerda() {
        if (selectedTickets.size === 0) {
            alert('Please select at least one ticket');
            return;
        }

        if (!confirm(`Auto-assign ${selectedTickets.size} ticket(s) using GERDA AI?`)) {
            return;
        }

        const btn = document.getElementById('batchGerdaBtn');
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';

        try {
            const response = await fetch('@Url.Action("BatchAssignTickets", "Manager")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({
                    ticketGuids: Array.from(selectedTickets),
                    useGerdaRecommendations: true
                })
            });

            const result = await response.json();
            
            if (result.success) {
                alert(`Successfully assigned ${result.successCount} ticket(s)!\nFailed: ${result.failureCount}`);
                location.reload();
            } else {
                alert('Error: ' + result.message);
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-robot me-2"></i>Auto-Assign Selected (GERDA)';
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to batch assign tickets');
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-robot me-2"></i>Auto-Assign Selected (GERDA)';
        }
    }

    function showAssignModal(ticketGuid) {
        document.getElementById('assignTicketGuid').value = ticketGuid;
        document.getElementById('assignAgentId').value = '';
        document.getElementById('assignProjectGuid').value = '';
        
        const modal = new bootstrap.Modal(document.getElementById('assignModal'));
        modal.show();
    }

    async function submitManualAssign() {
        const ticketGuid = document.getElementById('assignTicketGuid').value;
        const agentId = document.getElementById('assignAgentId').value;
        const projectGuid = document.getElementById('assignProjectGuid').value || null;

        if (!agentId) {
            alert('Please select an agent');
            return;
        }

        try {
            const response = await fetch('@Url.Action("AssignTicket", "Manager")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: new URLSearchParams({
                    ticketGuid: ticketGuid,
                    agentId: agentId,
                    projectGuid: projectGuid
                })
            });

            const result = await response.json();
            
            if (result.success) {
                alert('Ticket assigned successfully!');
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to assign ticket');
        }
    }

    function showManualBatchAssign() {
        // For simplicity, prompt for agent selection
        const agentSelect = document.getElementById('assignAgentId');
        const agentId = prompt('Enter agent ID for batch assignment (or leave empty to skip):');
        
        if (agentId === null) return; // Cancelled
        
        if (confirm(`Assign ${selectedTickets.size} ticket(s) to the selected agent?`)) {
            batchAssignManual(agentId);
        }
    }

    async function batchAssignManual(agentId) {
        const btn = document.getElementById('batchManualBtn');
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';

        try {
            const response = await fetch('@Url.Action("BatchAssignTickets", "Manager")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({
                    ticketGuids: Array.from(selectedTickets),
                    useGerdaRecommendations: false,
                    forceAgentId: agentId || null
                })
            });

            const result = await response.json();
            
            if (result.success) {
                alert(`Successfully assigned ${result.successCount} ticket(s)!\nFailed: ${result.failureCount}`);
                location.reload();
            } else {
                alert('Error: ' + result.message);
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-user-cog me-2"></i>Manual Assign Selected';
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to batch assign tickets');
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-user-cog me-2"></i>Manual Assign Selected';
        }
    }
</script>
}

@Html.AntiForgeryToken()
