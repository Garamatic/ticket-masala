@model TicketMasala.Web.Areas.Admin.Controllers.BatchOperationsViewModel
@{
    ViewData["Title"] = "Batch Operations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-gear me-2"></i>Batch Operations
        </h1>
        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-primary border-4">
                <div class="card-body">
                    <h6 class="text-muted">Assigned Today</h6>
                    <h2 class="mb-0">@Model.TicketsAssignedToday</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-success border-4">
                <div class="card-body">
                    <h6 class="text-muted">Assigned This Week</h6>
                    <h2 class="mb-0">@Model.TicketsAssignedThisWeek</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-info border-4">
                <div class="card-body">
                    <h6 class="text-muted">Closed Today</h6>
                    <h2 class="mb-0">@Model.TicketsClosedToday</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-warning border-4">
                <div class="card-body">
                    <h6 class="text-muted">Unassigned</h6>
                    <h2 class="mb-0">@Model.UnassignedTickets</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="bi bi-activity me-2"></i>Recent Batch Activity (Last 7 Days)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Tickets Assigned</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RecentBatchActivity)
                        {
                            <tr>
                                <td>@item.Date.ToString("d")</td>
                                <td><span class="badge bg-primary">@item.AssignedCount</span></td>
                                <td>@item.Description</td>
                            </tr>
                        }
                        @if (!Model.RecentBatchActivity.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">No batch activity in the last 7 days</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
