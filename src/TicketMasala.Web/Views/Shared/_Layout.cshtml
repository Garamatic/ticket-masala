@using Microsoft.AspNetCore.Identity
@using TicketMasala.Domain.Entities
@using TicketMasala.Domain.Common
@using TicketMasala.Web
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IWebHostEnvironment env
@inject TicketMasala.Web.Engine.GERDA.Configuration.IDomainUiService DomainUi
@inject TicketMasala.Web.Engine.GERDA.Configuration.IDomainConfigurationService DomainConfig

@{
    var title = ViewData["Title"] ?? "Ticket Masala";
    var description = ViewData["Description"] ?? "Project and Ticket Management System";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var hideSidebar = ViewData["HideSidebar"] as bool? == true;

    // Tenant Theme Logic
    var themePath = env.WebRootPath != null ? System.IO.Path.Combine(env.WebRootPath, "tenant-theme", "style.css") : null;
    var logoFileSystemPath = env.WebRootPath != null ? System.IO.Path.Combine(env.WebRootPath, "tenant-theme", "logo.png") : null;
    var logoUrl = (logoFileSystemPath != null && System.IO.File.Exists(logoFileSystemPath)) ? "~/tenant-theme/logo.png" : "~/images/logo.png";

    // Domain UI Logic
    var currentDomainId = DomainUi.GetCurrentDomainId();
    var domainLabel = DomainUi.GetLabel("DomainName", currentDomainId);
    var domainIcon = DomainUi.GetIcon("DomainIcon", currentDomainId);
    var domainCss = DomainUi.GetDomainCssClass(currentDomainId);
    var allDomains = DomainConfig.GetAllDomains();
}
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@description" />
    <meta name="theme-color" content="#6366F1" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <title>@title - Ticket Masala</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Rajdhani:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />

    @* Load tenant-specific theme if available *@
    @* Load tenant-specific theme if available *@
    @if (themePath != null && System.IO.File.Exists(themePath))
    {
            <link rel="stylesheet" href="~/tenant-theme/style.css" asp-append-version="true" />
    }

    @RenderSection("Styles", required: false)
</head>
<body hx-boost="true" class="@domainCss">
    <div class="app-wrapper">
        <!-- Sidebar Navigation -->
        @if (!hideSidebar)
        {
                <aside class="app-sidebar" id="sidebar">
                    <div class="navbar-brand">
                        <img class="navbar-logo" src="@Url.Content(logoUrl)" alt="Ticket Masala" />
                    </div>

                    <nav class="sidebar-nav" aria-label="Main navigation">
                        <ul class="list-unstyled">
                            <li class="sidebar-item">
                                <a class="sidebar-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home sidebar-icon"></i>
                                    <span>@Localizer["Dashboard"]</span>
                                </a>
                            </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                                    <li class="sidebar-item">
                                        <a class="sidebar-link @(currentController == "Projects" ? "active" : "")" 
                                   asp-controller="Projects" asp-action="Index">
                                            <i class="fas fa-folder-open sidebar-icon"></i>
                                            <span>@Localizer["Projects"]</span>
                                        </a>
                                    </li>

                            @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
                            {
                                            <li class="sidebar-item">
                                                <a class="sidebar-link @(currentController == "Customer" ? "active" : "")" 
                                       asp-controller="Customer" asp-action="Index">
                                                    <i class="fas fa-users sidebar-icon"></i>
                                                    <span>@Localizer["Customers"]</span>
                                                </a>
                                            </li>
                            }

