@model IT_Project2526.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Confirm Deletion</h4>
    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Name:</strong> @(string.Concat(Model.FirstName, " ", Model.LastName).Trim())</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Username:</strong> @Model.UserName</p>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
