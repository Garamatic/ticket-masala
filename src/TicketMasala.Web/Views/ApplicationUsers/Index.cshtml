@model List<TicketMasala.Web.ViewModels.ApplicationUsers.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users-cog me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create New User
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Type</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model ?? new List<TicketMasala.Web.ViewModels.ApplicationUsers.UserViewModel>())
                {
                    <tr>
                        <td>
                            <div class="fw-bold">@user.LastName, @user.FirstName</div>
                            <small class="text-muted">@user.Phone</small>
                        </td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Type == "Employee")
                            {
                                <span class="badge bg-info text-dark">Employee</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Customer</span>
                            }
                        </td>
                        <td>
                            @foreach(var role in user.Roles.Split(", "))
                            {
                                <span class="badge bg-primary rounded-pill me-1">@role</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
