@model IEnumerable<TicketMasala.Web.Models.KnowledgeBaseArticle>
@using TicketMasala.Web.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Knowledge Base"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-book me-2"></i> @Localizer["Knowledge Base"]</h2>
        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> @Localizer["Create Article"]
            </a>
        }
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="@Localizer["Search articles..."]" value="@ViewData["SearchTerm"]">
            <button class="btn btn-outline-secondary" type="submit">@Localizer["Search"]</button>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">@item.Title</a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <small>@Localizer["By {0} on {1}", item.Author?.UserName ?? Localizer["Unknown"].Value, item.CreatedAt.ToString("MMM dd, yyyy")]</small>
                        </h6>
                        <p class="card-text text-truncate">@item.Content</p>
                        <div>
                            @if (!string.IsNullOrEmpty(item.Tags))
                            {
                                foreach (var tag in item.Tags.Split(','))
                                {
                                    <span class="badge bg-info text-dark me-1">@tag.Trim()</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@Localizer["Read More"]</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary ms-2">@Localizer["Edit"]</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
