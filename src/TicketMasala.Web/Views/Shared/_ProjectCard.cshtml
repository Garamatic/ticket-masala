@model TicketMasala.Web.ViewModels.Projects.ProjectOverviewItemViewModel
<div class="card mb-3 box-shadow">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height:150px;object-fit:cover;" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.ShortDescription</p>
        <div class="progress" role="progressbar" aria-label="Project progress" aria-valuenow="@Model.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar bg-primary" style="width:@Model.ProgressPercent%">@Model.ProgressPercent%</div>
        </div>
        <a class="btn btn-link mt-2" asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Guid">View details</a>
    </div>
</div>
