@{
    ViewData["Title"] = "Create Ticket";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-plus-circle text-primary me-2"></i>
            Create New Ticket
        </h1>
        <p class="page-subtitle">Create a new support ticket</p>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Tickets
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea name="description" id="description" class="form-control" rows="4" placeholder="Describe the ticket..." required></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="customerId" class="form-label">Customer <span class="text-danger">*</span></label>
                        <select name="customerId" id="customerId" class="form-select" required>
                            <option value="">-- Select Customer --</option>
                            @foreach (var customer in ViewBag.Customers as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@customer.Value">@customer.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="responsibleId" class="form-label">Assign To (Optional)</label>
                        <select name="responsibleId" id="responsibleId" class="form-select">
                            <option value="">-- Unassigned --</option>
                            @foreach (var employee in ViewBag.Employees as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@employee.Value">@employee.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="projectGuid" class="form-label">Project (Optional)</label>
                        <select name="projectGuid" id="projectGuid" class="form-select">
                            <option value="">-- No Project --</option>
                            @foreach (var project in ViewBag.Projects as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@project.Value">@project.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="completionTarget" class="form-label">Target Completion Date</label>
                        <input type="date" name="completionTarget" id="completionTarget" class="form-control" 
                               value="@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                    Create Ticket
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
