@model IT_Project2526.ViewModels.CustomerDetailViewModel
@using System.Linq
@using IT_Project2526
@using IT_Project2526.Models;
@using IT_Project2526.ViewModels;

@{
    ViewData["Title"] = "Details Customer: " + Model.FirstName + " " + Model.LastName;
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Code:</dt>
        <dd class="col-sm-10">@Model.Code</dd>
    </dl>
</div>

<h3>Projects</h3>

@if (Model.Projects.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Status</th>
                <th>Project Manager</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>
                        <status-badge status="@project.Status"></status-badge>
                    </td>
                    <td>@project.ProjectManagerName</td>
                    <td>
                        <a asp-asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Guid" class="btn btn-info btn-sm">
                            View Project
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This customer has no projects</p>
}

<a asp-action="Index">Back to Customer Index</a>
