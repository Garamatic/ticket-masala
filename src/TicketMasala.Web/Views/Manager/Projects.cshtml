@model List<TicketMasala.Web.ViewModels.Projects.ProjectTicketViewModel>
@using TicketMasala.Web.ViewModels
@{
    ViewData["Title"] = "Manager Projects";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Project</th>
            <th>Manager</th>
            <th>Status</th>
            <th>Tickets</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProjectDetails.Name</td>
                <td>@(p.ProjectDetails.ProjectManagerName ?? "Unassigned")</td>
                <td>@p.ProjectDetails.Status</td>
                <td>@p.Tasks.Count()</td>
                <td>
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@p.ProjectDetails.Guid" class="btn btn-sm btn-primary">Open</a>
                    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@p.ProjectDetails.Guid" class="btn btn-sm btn-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
